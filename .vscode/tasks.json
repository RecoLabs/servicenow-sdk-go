{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run gofmt",
      "type": "shell",
      "command": "gofmt -s -w ./..",
      "options": {
        "PATH": "${env:PATH};C:\\Program Files\\Git\\usr\\bin",
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": {
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "Run golangci-lint",
      "type": "shell",
      "command": "golangci-lint run",
      "options": {
        "env": {
          "PATH": "${env:PATH};C:\\Program Files\\Git\\usr\\bin",
          "cwd": "${workspaceFolder}"
        }
      },
      "group": {
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": {
        "owner": "golangci-lint",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        }
      }
    }
  ]
}
